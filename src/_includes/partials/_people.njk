<div class="section" id="people">
    <h2>People</h2>
    <div class="people" id="people">
        {%- for person in collections.people | reverse -%}
        <div class="person">
            <img src="{{ person.data.img }}"/>
            <div class="info">
                <div class="name">
                    {%- if (person.data.website) -%}
                        <a href="{{ person.data.website }}" target="_external">    
                            {{ person.data.name }}
                        </a>
                    {%- else -%}
                        {{ person.data.name }}
                    {%- endif -%}
                </div>
                <div class="role">{{ person.data.role }}</div>
            </div>
        </div>
        {%- endfor -%}
    </div>
    {% include "partials/_alumni.njk" %}
</div>